# ResonanceDB API Environment Variables
# Copy this file to .env and configure for your environment

# Application
APP_NAME=ResonanceDB API
APP_VERSION=1.0.0
DEBUG=true

# Database (Async PostgreSQL)
DATABASE_URL=postgresql+asyncpg://resonance:resonance_dev@localhost:5432/resonancedb

# Security
# IMPORTANT: Change this in production!
API_KEY_SECRET=dev-secret-change-in-production

# Rate Limiting (requests per hour by tier)
RATE_LIMIT_STARTER=100
RATE_LIMIT_BRONZE=500
RATE_LIMIT_SILVER=2000
RATE_LIMIT_GOLD=10000

# S3 (Optional - for raw data archival)
# S3_BUCKET=resonancedb-samples
# S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_key
# AWS_SECRET_ACCESS_KEY=your_secret

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
